<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="exmp-pu" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <non-jta-data-source/>
        <class>org.examproject.tweet.entity.Tweet</class>
        <class>org.examproject.tweet.entity.Vocab</class>
        <class>org.examproject.tweet.entity.Word</class>
        <properties>            
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.EhCacheProvider" />       
            <property name="hibernate.cache.use_second_level_cache" value="true" />
            <property name="hibernate.cache.use_query_cache" value="true" />
            <property name="hibernate.cache.region.factory_class" value="net.sf.ehcache.hibernate.EhCacheRegionFactory" /> 
            <property name="hibernate.connection.pool_size" value="0" />
            <property name="hibernate.max_fetch_depth" value="3" />
            <!-- setting 'hibernate.hbm2ddl.auto' to 'create' will result in
                'import.sql' (in the root of the classpath) being used to populate the db
            -->
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <!--<property name="hibernate.hbm2ddl.auto" value="create" />-->
        </properties>
    </persistence-unit>
</persistence>